@model Diksha.ViewModel.CustomerandMovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .highlight{
        color:deepskyblue;
    }
</style>
@{ 
    var highlightClass = Model.Customer.Count > 0 ? "highlight" : null;
}
<h2 class="@highlightClass">Movie Name:@Model.Movie.Name</h2>

@if (Model.Customer.Count == 0)
{
    <p>No one has rented this movie</p>
}
else
{
    <ul>
        @foreach (var listOfCustomers in Model.Customer)
        {
            <li>Customer Name:@listOfCustomers.Name</li>
        }
    </ul>
}
